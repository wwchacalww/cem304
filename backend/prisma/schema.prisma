// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Turma {
  id               String                @id @default(uuid())
  nome             String
  serie            String
  turno            String
  ano              Int
  professores      ProfessoresOnTurmas[]
  MateriasOnTurmas MateriasOnTurmas[]
  Grades           Grade[]
  Aulas            Aulas[]

  @@map("turmas")
}

model Professor {
  id                    String                  @id @default(uuid())
  nome                  String
  turmas                ProfessoresOnTurmas[]
  MateriasOnProfessores MateriasOnProfessores[]
  Grades                Grade[]
  Aulas                 Aulas[]

  @@map("professores")
}

model Materia {
  id                    String                  @id @default(uuid())
  nome                  String
  ano                   Int
  MateriasOnTurmas      MateriasOnTurmas[]
  MateriasOnProfessores MateriasOnProfessores[]
  Grades                Grade[]
  Aulas                 Aulas[]

  @@map("materias")
}

model Grade {
  id           String    @id @default(uuid())
  dia          Int
  horario      String
  hora         String
  turno        String
  materia      Materia   @relation(fields: [materia_id], references: [id])
  materia_id   String
  professor    Professor @relation(fields: [professor_id], references: [id])
  professor_id String
  turma        Turma     @relation(fields: [turma_id], references: [id])
  turma_id     String

  @@map("grades")
}

model Aulas {
  id           String    @id @default(uuid())
  data         DateTime
  horario      String
  hora         String
  turno        String
  rf           Int       @default(0)
  materia      Materia   @relation(fields: [materia_id], references: [id])
  materia_id   String
  professor    Professor @relation(fields: [professor_id], references: [id])
  professor_id String
  turma        Turma     @relation(fields: [turma_id], references: [id])
  turma_id     String

  @@map("aulas")
}

model ProfessoresOnTurmas {
  professor    Professor @relation(fields: [professor_id], references: [id])
  professor_id String
  turma        Turma     @relation(fields: [turma_id], references: [id])
  turma_id     String

  @@id([professor_id, turma_id])
}

model MateriasOnTurmas {
  materia    Materia @relation(fields: [materia_id], references: [id])
  materia_id String
  turma      Turma   @relation(fields: [turma_id], references: [id])
  turma_id   String

  @@id([materia_id, turma_id])
}

model MateriasOnProfessores {
  materia      Materia   @relation(fields: [materia_id], references: [id])
  materia_id   String
  professor    Professor @relation(fields: [professor_id], references: [id])
  professor_id String

  @@id([materia_id, professor_id])
}
